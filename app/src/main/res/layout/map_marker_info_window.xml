<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        app:srcCompat="@android:drawable/ic_menu_mapmode" />

    <TextView
        android:id="@+id/marker_info_window_locality_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        android:text="Locality"
        android:layout_marginTop="19dp"

        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:id="@+id/marker_info_window_coordinates_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="coordinates"
        android:layout_below="@+id/marker_info_window_locality_tv"
        android:layout_alignStart="@+id/marker_info_window_locality_tv"
        android:layout_marginTop="18dp" />
</RelativeLayout>